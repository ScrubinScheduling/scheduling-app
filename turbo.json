{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["pnpm-lock.yaml"],
	"tasks": {
		"dev": {
			"persistent": true,
			"cache": false
		},

		"lint": { "outputs": [] },

		"typecheck": {
			"dependsOn": ["^typecheck"],
			"outputs": []
		},

		"test": {
			"dependsOn": ["^test?"],
			"outputs": []
		},

		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", "prisma/**"],
			"outputs": ["dist/**", ".next/**", ".output/**", "build/**", "!**/.next/cache/**"]
		},

		"e2e": {
			"cache": false
		}
	}
}
