{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["pnpm-lock.yaml"],
  "globalEnv": [
    "ENABLE_EXPERIMENTAL_COREPACK",
    "DATABASE_URL",
    "CLERK_PUBLISHABLE_KEY",
    "CLERK_SECRET_KEY",
    "CLERK_WEBHOOK_SIGNING_SECRET",
    "DIRECT_URL"
  ],

  "tasks": {
    "dev": {
      "persistent": true,
      "cache": false
    },

    "lint": { "outputs": [] },

    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": []
    },

    "test": {
      "dependsOn": ["^test?"],
      "outputs": []
    },

    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "prisma/**"],
      "outputs": ["dist/**", ".next/**", ".output/**", "build/**", "!**/.next/cache/**"]
    },

    "e2e": {
      "cache": false
    }
  }
}
